Database

CREATE DATABASE mtb;

TABLE

CREATE TABLE IF NOT EXISTS `login` (  
  `username` varchar(200) NOT NULL,
  `email_id` varchar(200) NOT NULL,
  `password` varchar(200) NOT NULL,  
  PRIMARY KEY (`username`)  
) ENGINE=InnoDB DEFAULT CHARSET=latin1;   

ALTER TABLE `login`
  DROP PRIMARY KEY,
   ADD PRIMARY KEY(
     `email_id`);
